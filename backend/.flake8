[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .ruff_cache,
    migrations,
    alembic

per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106

max-complexity = 10